{
  "name": "clangd-mcp-server",
  "version": "0.1.0",
  "description": "MCP server that bridges Claude Code with clangd LSP for enhanced C++ code intelligence",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "clangd-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest tests/integration",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' ./node_modules/.bin/jest tests/e2e"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "clangd",
    "lsp",
    "language-server",
    "c++",
    "code-intelligence"
  ],
  "author": "",
  "license": "MPL-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^24.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
